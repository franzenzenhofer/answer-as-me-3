{
  "name": "answer-as-me-3",
  "version": "1.2.0",
  "description": "Modular Hello World Google Apps Script Add-on with TypeScript",
  "main": "dist/Code.gs",
  "scripts": {
    "login": "clasp login",
    "create": "clasp create --title 'Answer As Me 3' --type addon --rootDir ./dist",
    "watch": "tsc --watch",
    "build": "npm run clean && tsc && npm-run-all --parallel bundle copy-files sync-readme && npm run clean:src",
    "sync-readme": "node sync-readme.js",
    "bundle": "tsx scripts/bundle-fast.ts",
    "bundle:slow": "tsx scripts/bundle.ts",
    "copy-files": "cp src/appsscript.json dist/",
    "clean": "rimraf dist",
    "clean:src": "rimraf dist/src dist/.tsbuildinfo",
    "push": "npm run build && clasp push --force",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "echo 'E2E tests require manual verification in Gmail - see test-integration.gs'",
    "test:integration": "npx ts-node --project tsconfig.integration.json src/integration-test.ts",
    "lint": "tsc --noEmit",
    "lint:fix": "eslint src/**/*.ts --fix",
    "check": "npm-run-all --parallel lint lint:eslint",
    "check:strict": "npm-run-all --parallel lint:strict lint:eslint:strict analyze",
    "lint:eslint": "eslint src/**/*.ts",
    "lint:eslint:strict": "eslint src/**/*.ts --ignore-pattern '**/*.test.ts' --ignore-pattern '**/*.spec.ts'",
    "lint:strict": "tsc --noEmit --strict --noImplicitAny --noImplicitThis --strictNullChecks --strictFunctionTypes --strictPropertyInitialization --noImplicitReturns --noFallthroughCasesInSwitch --noUncheckedIndexedAccess",
    "test:postbundle": "node tests/scripts/test-post-bundle.js",
    "test:missing-functions": "node tests/scripts/missing-functions-detector.js",
    "test:code-review": "node tests/scripts/typescript-code-review.js",
    "test:user-flow": "node tests/scripts/user-flow-optimizer.js",
    "test:comprehensive": "npm-run-all test:missing-functions test:code-review test test:postbundle",
    "test:all": "npm-run-all --parallel test test:postbundle",
    "analyze": "tsx scripts/analyze-code.ts",
    "analyze:strict": "npm run analyze && npm run test:comprehensive",
    "predeploy": "npm-run-all validate:all check:strict validate:bundle",
    "predeploy:slow": "npm-run-all validate:all check validate:bundle",
    "validate:bundle": "npm run build && tsx scripts/gas-bundle-validator.ts",
    "deploy": "tsx scripts/deploy.ts",
    "deploy:dry-run": "tsx scripts/deploy.ts --dry-run",
    "deploy:major": "tsx scripts/deploy.ts --major",
    "deploy:minor": "tsx scripts/deploy.ts --minor",
    "deploy:patch": "tsx scripts/deploy.ts --patch",
    "deploy:force": "npm run build && npm run bundle && tsx scripts/deploy.ts",
    "open": "clasp open",
    "logs": "clasp logs",
    "setup": "npm install && npm run build",
    "prepare": "husky",
    "validate:namespaces": "tsx scripts/namespace-validator.ts",
    "validate:namespaces:fix": "tsx scripts/namespace-validator.ts --fix",
    "validate:types": "tsx scripts/gas-type-checker.ts",
    "validate:types:fix": "tsx scripts/gas-type-checker.ts --fix",
    "validate:gas": "tsx scripts/gas-linter.ts",
    "validate:gas:strict": "tsx scripts/gas-linter.ts --strict",
    "validate:all": "npm-run-all validate:namespaces validate:types validate:gas",
    "setup:gas": "tsx scripts/setup-gas-fixes.ts",
    "generate:types": "tsx scripts/gas-type-checker.ts --generate-overrides"
  },
  "keywords": [
    "google-apps-script",
    "typescript",
    "modular",
    "automation"
  ],
  "author": "Franz Enzenhofer",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@google/clasp": "^2.4.2",
    "@types/dotenv": "^6.1.1",
    "@types/google-apps-script": "^1.0.99",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.1.0",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "acorn": "^8.15.0",
    "chalk": "^5.5.0",
    "commander": "^12.1.0",
    "dotenv": "^17.2.1",
    "esbuild": "^0.19.0",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
